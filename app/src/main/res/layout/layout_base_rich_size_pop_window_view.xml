<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:background="@drawable/edit_pop_window"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

  <CheckBox
      android:id="@id/id_editor_tool_size_small"
      android:gravity="center"
      android:button="@null"
      android:text="小"
      android:textSize="16dp"
      android:background="@drawable/bg_edit_tool_text"
      android:layout_marginEnd="10dp"
      android:layout_width="40dp"
      android:layout_height="40dp"/>

  <CheckBox
      android:id="@id/id_editor_tool_size_normal"
      android:gravity="center"
      android:button="@null"
      android:text="中"
      android:textSize="16dp"
      android:background="@drawable/bg_edit_tool_text"
      android:layout_marginEnd="10dp"
      android:layout_width="40dp"
      android:layout_height="40dp"/>

  <CheckBox
      android:id="@id/id_editor_tool_size_big"
      android:gravity="center"
      android:button="@null"
      android:text="大"
      android:textSize="16dp"
      android:background="@drawable/bg_edit_tool_text"
      android:layout_width="40dp"
      android:layout_height="40dp"/>

</LinearLayout>